{
    "homepage": "https://pecl.php.net/package/lua",
    "version": "2.0.5",
    "architecture": {
        "64bit": {
            "url": "http://windows.php.net/downloads/pecl/releases/lua/2.0.5/php_lua-2.0.5-7.2-ts-vc15-x64.zip",
            "hash": "e27b5cca11ba1b7227cfe842d2f7e88559992a35d0fac66757463432d7cb9aec"
        },
        "32bit": {
            "url": "http://windows.php.net/downloads/pecl/releases/lua/2.0.5/php_lua-2.0.5-7.2-ts-vc15-x86.zip",
            "hash": "b71e64c1704e0a3223fa35206ebe842f1bdd270d22b45c8db66cedb6af53beba"
        }
    },
    "depends": [
        "php"
    ],
    "post_install": "$phpconfd = \"$persist_dir\\..\\php\\cli\\conf.d\"; if((test-path $phpconfd)) { echo \"Enabling extension $(Convert-Path $phpconfd)\\lua.ini\"; echo \"extension=$dir\\php_lua.dll\" | sc \"$phpconfd\\lua.ini\"; echo \"Remove-Item '$(Convert-Path $phpconfd)\\lua.ini'\" | sc \"$dir\\uninstall.ps1\" } else { write-host -f yellow \"PHP was not installed through scoop, you have to activate php_lua.dll manually!\" }",
    "checkver": "lua/([\\d.]+)/windows",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://windows.php.net/downloads/pecl/releases/lua/$version/php_lua-$version-7.2-ts-vc15-x64.zip"
            },
            "32bit": {
                "url": "http://windows.php.net/downloads/pecl/releases/lua/$version/php_lua-$version-7.2-ts-vc15-x86.zip"
            }
        }
    },
    "uninstaller": {
        "file": "uninstall.ps1"
    }
}
