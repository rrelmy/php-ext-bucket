        "architecture": {
            "64bit": {
                "url": "http://windows.php.net/downloads/pecl/releases/grpc/$version/php_grpc-$version-7.2-ts-vc15-x64.zip"
            },
            "32bit": {
                "url": "http://windows.php.net/downloads/pecl/releases/grpc/$version/php_grpc-$version-7.2-ts-vc15-x86.zip"
            }
        }
